<div class='user-main'>

<div class='user-container'>
<h1><%= @user.name %></h1>
<p class='post-counter'>Number of posts: <%=@user.post_counter%></p>
</div>
</div>

<div class='post-comments'>
<% @user.posts.includes(:author).each_with_index do |post, index| %>
  <div class='post-intro'>
  <h3><%= link_to post.title, user_post_path(@user, post, post_number: index + 1) %></h3>
  <p><%= truncate(post.text, length: 100, separator: '...') %></p>
  <div class='counters'>
  <p>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
  </div>
  </div>
  
  <div class='comments'>
  <% post.comments.includes(:author).each do |comment| %>
    <p><%= comment.author.name %>: <%= comment.text %></p>
  <% end %>
  </div>
<% end %>
</div>

<%= link_to "New Post", new_user_post_path(@user), class: 'pagination-button' %>
