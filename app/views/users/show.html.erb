<div class='user-main'>
<% if @user.photo.attached? %>
  <img class='user-photo' src="<%= url_for(@user.photo) %>">
<% end %>

<div class='user-container'>
<h1><%= @user.name %></h1>
<p class='post-counter'>Number of posts: <%= @user.post_counter.to_i.presence || 0 %></p>
</div>
</div>

<div class='user-id-container'>
<div class='bio'>
<h2>Bio</h2>
<p><%= @user.bio %></p>
</div>

<% @user.posts.each_with_index do |post, index| %>
  <div class='post-info'>
  <h3>Post #<%= index + 1 %></h3>
  <p><%= truncate(post.text, length: 100, separator: '...') %></p>
  <div class='counters'>
  <p>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
  </div>
  </div>
<% end %>

</div>

<button class='form-button'><%= link_to "All posts", user_posts_path(@user) %></button>
